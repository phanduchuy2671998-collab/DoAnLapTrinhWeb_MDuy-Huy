@model DoAnLapTrinhWebBanThucAnNhanh.Models.HomeIndexViewModel

<!-- Main Content -->
<div class="container-fluid px-4 py-3">
  <div class="row g-1">
    <!-- Left Sidebar -->
    <div class="col-lg-2 col-md-3">
      <!-- Thường Dùng -->
      <div class="sidebar-section mb-3">
        <div class="sidebar-title mb-2 fw-bold text-primary" style="text-align: center">
          <h5>Thường Dùng</h5>
        </div>
        <div class="sidebar-content">
          <div class="tag-area">
            <div class="sidebar-content">
              <div class="d-flex flex-wrap gap-2">
                <span class="badge bg-primary">Món nước</span>
                <span class="badge bg-success">Món rau</span>
                <span class="badge bg-warning text-dark">Món ngọt</span>
                <span class="badge bg-info text-dark">Món mặn</span>
                <span class="badge bg-danger">Món tuổi thơ</span>
                <span class="badge bg-secondary">Món mới</span>
                <span class="badge bg-dark">Bán chạy</span>
                <span class="badge bg-light text-dark">Web</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Toast theo dõi đơn hàng (demo) -->
      <div class="toast show mt-1" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <strong class="me-auto">Đơn hàng sắp giao !</strong>
          <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close">
            <span aria-hidden="true"></span>
          </button>
        </div>
        <small class="p-2">11 mins ago</small>
        <div class="toast-body">
          Đơn hàng của bạn sắp tới vui lòng chú ý điện thoại
        </div>
      </div>

      <div class="toast show mt-1" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <strong class="me-auto">Đơn hàng sắp giao !</strong>
          <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close">
            <span aria-hidden="true"></span>
          </button>
        </div>
        <small class="p-2">11 mins ago</small>
        <div class="toast-body">
          Đơn hàng của bạn sắp tới vui lòng chú ý điện thoại
        </div>
      </div>
    </div>

    <!-- Center Content -->
    <div class="col-lg-8 col-md-6">
      <!-- Banner Carousel -->
      <div id="bannerCarousel" class="carousel slide mb-3" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="banner-slide">
              <img src="https://d3design.vn/uploads/Anh_Bia_Food_menu_web_banner_social_media_banner_template_Free_Psd.jpg"
                   class="card-img-top img-fluid"
                   style="max-height: 180px; object-fit: cover"
                   alt="Banner chính" />
            </div>
          </div>

          <div class="carousel-item">
            <div class="banner-slide">
              <img src="https://cdn2.fptshop.com.vn/unsafe/Uploads/images/tin-tuc/176808/Originals/poster-do-an-14.jpg"
                   class="card-img-top img-fluid"
                   style="max-height: 180px; object-fit: cover"
                   alt="Banner phụ" />
            </div>
          </div>

          <div class="carousel-item">
            <div class="banner-slide">
              <img src="https://cdn2.fptshop.com.vn/unsafe/Uploads/images/tin-tuc/176808/Originals/poster-do-an-20.jpg"
                   class="card-img-top img-fluid"
                   style="max-height: 180px; object-fit: cover"
                   alt="Banner phụ" />
            </div>
          </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- Bán Chạy -->
      <div class="container py-4">
        <h3 class="mb-3 text-primary">Cháy hàng bà con ơi</h3>

        <div class="product-row">
          @foreach (var p in Model.BanChay)
          {
              <div class="card product-card shadow-sm">
                  <img src="@p.ImageURL" class="card-img-top" alt="@p.ProductName" />
                  <div class="card-body d-flex flex-column justify-content-between">
                      <div>
                          <h5 class="card-title mb-1">@p.ProductName</h5>
                          <p class="card-text text-muted small mb-2">@p.Descriptions</p>
                          <p class="fw-bold text-danger mb-3">@p.Price.ToString("N0") ₫</p>
                      </div>
                      <div class="d-flex gap-1">
                          <a asp-controller="Products" asp-action="Details" asp-route-id="@p.ProductID"
                             class="btn btn-outline-primary flex-fill text-truncate">
                              Chi tiết
                          </a>
                          <a asp-controller="Cart" asp-action="Add" asp-route-id="@p.ProductID"
                             class="btn btn-primary flex-fill text-truncate">
                              Thêm vào giỏ
                          </a>
                      </div>
                  </div>
              </div>
          }
        </div>
      </div>

      <!-- Món Mới -->
      <div class="container py-4">
        <h3 class="mb-3 text-primary">Món mới</h3>

        <div class="product-row">
          @foreach (var p in Model.MonMoi)
          {
              <div class="card product-card shadow-sm">
                  <img src="@p.ImageURL" class="card-img-top" alt="@p.ProductName" />
                  <div class="card-body d-flex flex-column justify-content-between">
                      <div>
                          <h5 class="card-title mb-1">@p.ProductName</h5>
                          <p class="card-text text-muted small mb-2">@p.Descriptions</p>
                          <p class="fw-bold text-danger mb-3">@p.Price.ToString("N0") ₫</p>
                      </div>
                      <div class="btn-group-custom mt-auto">
                          <a asp-controller="Products" asp-action="Details" asp-route-id="@p.ProductID"
                             class="btn btn-outline-primary flex-fill">
                              Chi tiết
                          </a>
                          <a asp-controller="Cart" asp-action="Add" asp-route-id="@p.ProductID"
                             class="btn btn-primary flex-fill">
                              Thêm vào giỏ
                          </a>
                      </div>
                  </div>
              </div>
          }
        </div>
      </div>

      <!-- Món Tuổi Thơ -->
      <div class="container py-4">
        <h3 class="mb-3 text-primary">Món tuổi thơ</h3>

        <div class="product-row">
          @foreach (var p in Model.MonTuoiTho)
          {
              <div class="card product-card shadow-sm">
                  <img src="@p.ImageURL" class="card-img-top" alt="@p.ProductName" />
                  <div class="card-body d-flex flex-column justify-content-between">
                      <div>
                          <h5 class="card-title mb-1">@p.ProductName</h5>
                          <p class="card-text text-muted small mb-2">@p.Descriptions</p>
                          <p class="fw-bold text-danger mb-3">@p.Price.ToString("N0") ₫</p>
                      </div>
                      <div class="btn-group-custom mt-auto">
                          <a asp-controller="Products" asp-action="Details" asp-route-id="@p.ProductID"
                             class="btn btn-outline-primary flex-fill">
                              Chi tiết
                          </a>
                          <a asp-controller="Cart" asp-action="Add" asp-route-id="@p.ProductID"
                             class="btn btn-primary flex-fill">
                              Thêm vào giỏ
                          </a>
                      </div>
                  </div>
              </div>
          }
        </div>
      </div>

      <!-- Danh Mục Sản Phẩm -->
      <div class="row g-4">
        <h3 class="text-primary text-responsive">Danh Mục Sản Phẩm</h3>

        <!-- Pagination demo (chưa dynamic) -->
        <div>
          <ul class="pagination pagination-lg">
            <li class="page-item disabled"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
          </ul>
        </div>

        <div class="container py-4">
          <div class="product-row">
            @foreach (var p in Model.TatCaSanPham)
            {
                <div class="card product-card shadow-sm">
                    <img src="@p.ImageURL" class="card-img-top" alt="@p.ProductName" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title mb-1">@p.ProductName</h5>
                            <p class="card-text text-muted small mb-2">@p.Descriptions</p>
                            <p class="fw-bold text-danger mb-3">@p.Price.ToString("N0") ₫</p>
                        </div>
                        <div class="btn-group-custom mt-auto">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@p.ProductID"
                               class="btn btn-outline-primary flex-fill">
                                Chi tiết
                            </a>
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@p.ProductID"
                               class="btn btn-primary flex-fill">
                                Thêm vào giỏ
                            </a>
                        </div>
                    </div>
                </div>
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Right Sidebar -->
    <div class="col-lg-2 col-md-3">
      <div class="sidebar-content d-flex justify-content-center">
        <div class="ad-area d-flex flex-column gap-3">
          <img src="https://cdn2.fptshop.com.vn/unsafe/1920x0/filters:format(webp):quality(75)/2024_2_24_638444073567684080_anh-dai-dien.jpg"
               class="img-fluid rounded" alt="Quảng cáo" />
          <img src="https://insieutoc.vn/wp-content/uploads/2021/03/mau-poster-dep.jpg"
               class="img-fluid rounded" alt="Quảng cáo" />
          <img src="https://insieutoc.vn/wp-content/uploads/2021/03/poster-dep.jpg"
               class="img-fluid rounded" alt="Quảng cáo" />
          <img src="https://insieutoc.vn/wp-content/uploads/2021/03/cac-mau-poster-dep.jpg"
               class="img-fluid rounded" alt="Quảng cáo" />
        </div>
      </div>
    </div>
  </div>
</div>
